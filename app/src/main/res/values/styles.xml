<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="botonesAceptar">
        <item name="android:background">@color/colorBtnAceptaci√≥n</item>
        <item name="android:textStyle">bold</item> <!--Pone la letra en negrita-->
    </style>

    <style name="botonesCancelacion">
        <item name="android:background">@color/colorBtnCancelacion</item>
        <item name="android:textStyle">italic</item> <!--Pone la letra en cursiva-->
    </style>

    <style name="botones">
        <item name="android:background">@color/colorBotones</item>
        <item name="android:textColor">@color/colorTextoBotones</item>
        <item name="android:layout_width">130dp</item> <!-- Largura -->
        <item name="android:layout_height">60dp</item> <!-- Anchura -->
    </style>

    <style name="negrita">
        <item name="android:textStyle">bold</item> <!--Pone la letra en negrita-->
    </style>

    <style name="cursiva">
        <item name="android:textStyle">italic</item> <!--Pone la letra en negrita-->
    </style>


</resources>
